<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/board_padding"
    android:paddingRight="@dimen/board_padding"
    tools:context=".PlayActivity">

    <include
        layout="@layout/board_layout"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="45dp"
        android:layout_margin="@dimen/score_margin"
        android:fontFamily="@font/digitalt"
        android:text="@string/default_Score"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/option_size" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="45dp"
        android:layout_margin="@dimen/score_margin"
        android:fontFamily="@font/digitalt"
        android:text="@string/default_time"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/option_size" />



</RelativeLayout>